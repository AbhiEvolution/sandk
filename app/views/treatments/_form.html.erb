<div class="container mt-3">
  <%= form_with model: [@patient, @treatment] do |form| %>
  <div>
    <%= form.select :typeoftreatement, [ 'RCT','Extraction','Scaling','Crown/Bridge', ], :prompt => 'Type of treatement', :class=>'form-select' %>
  </div>
  <br />
  <div>
    <%= form.label :teeth %><br>
    <%= form.text_field :teeth,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%= form.label :medicine %><br>
    <%= form.text_area :medicine,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%= form.label :next_appointment %><br>
    <%= form.date_field :nextappointment,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <p>
    <%= form.submit  class:"btn btn-secondary"%>
  </p>
  <% end %>
  <%= link_to "Back", patient_path(@patient), class:"btn btn-secondary"%>
</div>
<style>
  #treatment_typeoftreatement {
    display: block;
    width: 100%;
    padding: 0.375rem 2.25rem 0.375rem 0.75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    border: 1px solid #ced4da;
    border-radius: 0.375rem;
  }
</style>