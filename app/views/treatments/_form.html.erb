  #treatment_typeoftreatement {
    display: block;
    width: 100%;
    padding: 0.375rem 2.25rem 0.375rem 0.75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    border: 1px solid #ced4da;
    border-radius: 0.375rem;
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
  }

  #treatment_nextappointment_1i,
  #treatment_nextappointment_3i,
  #treatment_nextappointment_4i,
  #treatment_nextappointment_5i {
    display: inline-block;
    width: 10%;
    padding: 0.375rem 2.25rem 0.375rem 0.75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    border: 1px solid #ced4da;
    border-radius: 0.375rem;
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
  }

  #treatment_nextappointment_2i {
    display: inline-block;
    width: 15%;
    padding: 0.375rem 2.25rem 0.375rem 0.75rem;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #212529;
    background-color: #fff;
    border: 1px solid #ced4da;
    border-radius: 0.375rem;
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
  }
  div.select>select {
