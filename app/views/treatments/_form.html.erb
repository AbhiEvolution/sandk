<div class="container mt-3">
  <%= form_with model: [@patient, @treatment] do |form| %>
  <div>
    <%= form.label :Type_of_treatement %><br>
    <%= form.select :typeoftreatement, Treatementtype.all.map(&:name), {prompt:"Choose Treatment"}%>
  </div>
  <br />
  <div class="select">
    <%= form.label :teeth %><br>
    <%= form.select :quadrant, [ "1","2","3","4","5","6","7","8" ], :prompt => 'Quadrant'%>
    <%= form.select :teeth, [ "1","2","3","4","5","6","7","8" ], :prompt => 'Teeth' %>
  </div>
  <br />
  <div>
    <%= form.label :medicine %><br>
    <%= form.text_area :medicine,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%= form.label :next_appointment %><br>
    <%= form.datetime_select :nextappointment,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%= form.label :deposite %><br>
    <%= form.number_field :deposite ,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <p>
    <%= form.submit  class:"btn btn-secondary"%>
  </p>
  <% end %>
  <%= link_to "Back", patient_path(@patient), class:"btn btn-secondary"%>
</div>

