<div class="bg-primary-gradient my-3">
  <h1 class="text-center py-4">Listing of all patient</h1>
</div>
<div class="container table-responsive text-center">
  <table class="table table-striped table-bordered border-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col">Address</th>
        <th scope="col">Phone</th>
        <th scope="col">
          <div class="text-center border-bottom border-3 border-dark">payment</div>
          <div class="text-center">
            <span class="border-end border-3 border-dark px-2 ">Deposite</span>
            <span class="px-2">Balance</span>
          </div>
        </th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <%@patients.each do |patient| %>
        <tr>
          <th scope="row"><%= patient.name %></th>
          <td><%= patient.age %></td>
          <td><%= patient.address %></td>
          <td><%= patient.phone %></td>
          <td>
            <div class="text-center">
              <span class="border-end border-3 border-dark px-2 "><%= patient.deposite %></span>
              <span class="px-2"><%= patient.balance %></span>
            </div>
          </td>
          <td><%= link_to "Show this patient",patient  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="d-flex justify-content-center">
  <%== pagy_nav(@pagy)%>
</div>
