<div class="bg-primary-gradient mb-3">
  <h1 class="text-center py-4  text-color-blue">List of all patient</h1>
</div>
<div class="container table-responsive text-center">
  <%=render 'patients/search_form'%>
  <div id="patients">
    <table class="table table-striped table-bordered border-dark">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Treatement</th>
          <th scope="col">Age</th>
          <th scope="col">Address</th>
          <th scope="col">Phone</th>
          <th scope="col">
            <div class="text-center border-bottom border-3 border-dark">cost</div>
            <div class="text-center">
              <span class="border-end border-3 border-dark px-2 ">Deposite</span>
              <span class="px-2">Balance</span>
            </div>
          </th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <%@patients.each do |patient| %>
        <%=render partial: 'patient', locals: { patient: patient}%>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="d-flex justify-content-center">
  <%== pagy_nav(@pagy)%>
</div>