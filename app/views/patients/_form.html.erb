<%= form_with model: @patient do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%= form.label  :age %><br>
    <%= form.text_field  :age,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%= form.label :address %><br>
    <%= form.text_field :address,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%= form.label :phone %><br>
    <%= form.text_field :phone,class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%= form.label :cost %><br>
    <%= form.number_field :cost, class: 'form-control shadow-lg' %>
  </div>
  <br />
  <div>
    <%=form.hidden_field :user_id, value: current_user.id,  class: 'form-control'%>
  </div>
  <div>
    <%= form.submit class:"btn btn-secondary"%>
  </div>
<%end%>
