<div class="text-center">
  <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add Payment
  </button>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Payment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%=form_with model: @patient do |form|%>
          <% if @patient.errors.full_messages.any? %>
            <% @patient.errors.full_messages.each do |error_message| %>
              <%= error_message if @patient.errors.full_messages.first == error_message %> <br />
            <% end %>
          <%end %>
          <div>
            <%= form.label :deposite %><br>
            <%= form.text_field :deposite,class: 'form-control shadow-lg' %>
          </div>
          <br />
          <div>
            <%= form.label :balance %><br>
            <%= form.text_field :balance,class: 'form-control shadow-lg' %>
          </div>
          <br />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= form.submit "Add Photos", type: "submit", :class=> "btn btn-primary" %>
        <%end%>
      </div>
    </div>
  </div>
</div>
